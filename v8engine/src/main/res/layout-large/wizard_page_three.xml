<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aptoide_orange"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/aptoide_logo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/logo_aptoide"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:text="@string/wizard_title_viewpager_three"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/wizard_community"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wizard_description_part_one_viewpager_three"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/wizard_description_part_two_viewpager_three"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wizard_description_part_three_viewpager_three"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/login_register_layout"
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      android:layout_marginBottom="10dp"
      android:gravity="center"
      android:orientation="vertical"
      >

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/wizard_custom_register_button"
        android:text="@string/wizard_register_now_button"
        android:textColor="@color/aptoide_orange"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/wizard_be_a_part_of_aptoide"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/wizard_or_login"
        android:textColor="@color/white"
        />
  </LinearLayout>


</LinearLayout>