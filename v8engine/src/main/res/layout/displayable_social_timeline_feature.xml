<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          tools:ignore="contentDescription"
          tools:src="@drawable/img_people_mockup"
          android:id="@+id/card_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="14dp"
          android:layout_marginLeft="12.7dp"
          />

      <TextView
          android:layout_marginTop="14.7dp"
          android:id="@+id/card_title"
          style="@style/Widget.Aptoide.Card.Title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="72dp"
          android:layout_marginLeft="72dp"
          android:lines="1"
          android:ellipsize="end"
          android:layout_marginEnd="48dp"
          android:layout_marginRight="48dp"
          tools:text="Aptoide Team"
          />

      <TextView
          android:lines="1"
          android:ellipsize="end"
          android:id="@+id/card_subtitle"
          style="@style/Widget.Aptoide.Card.Subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_title"
          android:layout_marginStart="72dp"
          android:layout_marginLeft="72dp"
          android:layout_marginEnd="48dp"
          android:layout_marginRight="48dp"
          tools:text="HÃ¡ duas horas"
          />

      <View
          android:layout_marginLeft="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <include layout="@layout/partial_social_timeline_thumbnail"/>
  </LinearLayout>
</android.support.v7.widget.CardView>

