<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.Aptoide.Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/displayable_social_timeline_store_latest_apps_card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_store_latest_apps_header"
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          tools:ignore="contentDescription"
          tools:src="@drawable/img_people_mockup"
          android:id="@+id/displayable_social_timeline_store_latest_apps_card_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="14dp"
          android:layout_marginLeft="12.7dp"
          />

      <TextView
          android:layout_marginTop="14.7dp"
          android:id="@+id/displayable_social_timeline_store_latest_apps_card_title"
          style="@style/Widget.Aptoide.Card.Title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="72dp"
          android:layout_marginLeft="72dp"
          android:lines="1"
          android:ellipsize="end"
          android:layout_marginEnd="48dp"
          android:layout_marginRight="48dp"
          tools:text="Hamata6 Store"
          />

      <TextView
          android:lines="1"
          android:ellipsize="end"
          android:id="@+id/displayable_social_timeline_store_latest_apps_card_subtitle"
          style="@style/Widget.Aptoide.Card.Subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_store_latest_apps_card_title"
          android:layout_marginStart="72dp"
          android:layout_marginLeft="72dp"
          android:layout_marginEnd="48dp"
          android:layout_marginRight="48dp"
          tools:text="HÃ¡ duas horas"
          />

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:src="@drawable/appstimeline_appupdate_shop_icon"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_alignTop="@id/displayable_social_timeline_store_latest_apps_card_title"
          />


      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_marginLeft="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="6dp"
        android:lines="1"
        android:ellipsize="end"
        style="@style/Widget.Aptoide.Card.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/displayable_social_timeline_store_latest_apps_headline"
        />

    <HorizontalScrollView
        android:layout_marginStart="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="9.3dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:padding="4dp"
          android:id="@+id/displayable_social_timeline_store_latest_apps_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
      </LinearLayout>
    </HorizontalScrollView>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <View
        android:id="@+id/partial_social_timeline_thumbnail_divider2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />
  </LinearLayout>
</android.support.v7.widget.CardView>

