<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:clipToPadding="false"
    android:background="@color/grey_fog_light"
    >
  <LinearLayout
      android:id="@+id/app_view_suggested"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:elevation="2dp"
      android:background="@drawable/rounded_corners_white"
      >

    <TextView
        android:id="@+id/similar_apps_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/similar_apps_to"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/aptoide_orange"
        android:textSize="18sp"
        />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/appview_suggested_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="6dp"
        />
  </LinearLayout>
</FrameLayout>