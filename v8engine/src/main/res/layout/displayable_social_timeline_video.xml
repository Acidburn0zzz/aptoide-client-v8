<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_video_header"
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:clickable="true"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/card_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="14dp"
          tools:ignore="contentDescription"
          />

      <TextView
          android:id="@+id/card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:ellipsize="end"
          android:lines="1"
          tools:text="Aptoide Team"
          style="@style/Widget.Aptoide.Card.Title"
          />

      <TextView
          android:id="@+id/card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:ellipsize="end"
          android:lines="1"
          tools:text="HÃ¡ duas horas"
          style="@style/Widget.Aptoide.Card.Subtitle"
          />

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_alignRight="@+id/card_custom_view_line_separator"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:src="@drawable/appstimeline_video_play_icon"
          />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/partial_social_timeline_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

      <!--
          android:layout_width="120dp"
      -->

      <FrameLayout
          android:id="@+id/media_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/partial_social_timeline_thumbnail_title"
          android:layout_marginBottom="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="15dp"
          android:layout_marginStart="12dp"
          android:clickable="true"
          android:gravity="center"
          style="@style/focusableBackground"
          >

        <include
            layout="@layout/brick_app_item_list"
            android:id="@+id/partial_social_timeline_thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/btn_movie_play_normal"
            android:visibility="visible"
            />

      </FrameLayout>

      <TextView
          android:id="@+id/partial_social_timeline_thumbnail_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="15dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="12dp"
          android:ellipsize="end"
          android:maxLines="3"
          android:typeface="serif"
          tools:text="Best backup apps: save all your Android's innards"
          style="@style/Widget.Aptoide.Card.Thumbnail"
          />

      <View
          android:id="@+id/partial_social_timeline_thumbnail_divider"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_below="@id/media_layout"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          android:visibility="gone"
          />

    </RelativeLayout>
    <View
        android:id="@+id/partial_social_timeline_thumbnail_divider2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />

    <include layout="@layout/social_bar_timeline"/>
  </LinearLayout>
</android.support.v7.widget.CardView>

