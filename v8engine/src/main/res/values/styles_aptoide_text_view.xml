<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Aptoide"/>

  <!-- Sizes -->
  <style name="Aptoide.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Aptoide.TextView.Regular">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="Aptoide.TextView.Medium">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXL">
    <item name="android:textSize">34sp</item>
    <item name="android:lineSpacingMultiplier">1.18</item>
  </style>

  <style name="Aptoide.TextView.Regular.XL">
    <item name="android:textSize">24sp</item>
    <item name="android:lineSpacingMultiplier">1.34</item>
  </style>

  <style name="Aptoide.TextView.Regular.L">
    <item name="android:textSize">20sp</item>
    <item name="android:lineSpacingMultiplier">1.4</item>
  </style>

  <style name="Aptoide.TextView.Regular.M">
    <item name="android:textSize">16sp</item>
    <item name="android:lineSpacingMultiplier">1.5</item>
  </style>

  <style name="Aptoide.TextView.Regular.S">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingMultiplier">1.43</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS">
    <item name="android:textSize">12sp</item>
    <item name="android:lineSpacingMultiplier">1.34</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXS">
    <item name="android:textSize">10sp</item>
    <item name="android:lineSpacingMultiplier">1.6</item>
  </style>

  <style name="Aptoide.TextView.Medium.L">
    <item name="android:textSize">20sp</item>
    <item name="android:lineSpacingMultiplier">1.4</item>
  </style>

  <style name="Aptoide.TextView.Medium.S">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingMultiplier">2</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Aptoide.TextView.Medium.XXS">
    <item name="android:textSize">10sp</item>
    <item name="android:lineSpacingMultiplier">1.2</item>
  </style>

  <!-- Colors-->
  <style name="Aptoide.TextView.Regular.XS.GreyFog" parent="Aptoide.TextView.Regular.XS">
    <item name="android:textColor">@color/greydarkfog</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXS.GreyFog" parent="Aptoide.TextView.Regular.XXS">
    <item name="android:textColor">@color/greydarkfog</item>
  </style>

  <style name="Aptoide.TextView.Regular.L.Grey" parent="Aptoide.TextView.Regular.L">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.M.Grey" parent="Aptoide.TextView.Regular.M">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Grey" parent="Aptoide.TextView.Regular.S">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS.Grey" parent="Aptoide.TextView.Regular.XS">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS.BlackAlpha" parent="Aptoide.TextView.Regular.XS">
    <item name="android:textColor">@color/black87alpha</item>
  </style>

  <style name="Aptoide.TextView.Medium.L.Black" parent="Aptoide.TextView.Medium.L">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Red700" parent="Aptoide.TextView.Regular.S">
    <item name="android:textColor">@color/red_700</item>
  </style>

  <!-- Text Style -->
  <style name="Aptoide.TextView.Regular.XXS.GreyFog.AllCaps" parent="Aptoide.TextView.Regular.XXS.GreyFog">
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
