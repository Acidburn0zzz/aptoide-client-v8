<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comments_filter_language_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ordering_buttons_layout"
    android:gravity="right"
    android:orientation="vertical"
    android:background="@color/comment_gray"
    >

    <Spinner
        android:id="@+id/comments_filter_language_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="right"
        />

  <include layout="@layout/separator_horizontal"/>


</LinearLayout>
