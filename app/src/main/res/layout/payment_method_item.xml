<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
  <ImageView
      android:id="@+id/payment_method_logo"
      android:layout_width="48dp"
      android:layout_height="32dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:src="@drawable/android_pay_logo"
      />

  <TextView
      android:id="@+id/payment_method_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16.3dp"
      android:layout_marginStart="16.3dp"
      android:layout_marginTop="-5dp"
      android:layout_toEndOf="@id/payment_method_logo"
      android:layout_toRightOf="@id/payment_method_logo"
      tools:text="Paypau"
      style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
      />

  <TextView
      android:id="@+id/payment_method_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/payment_method_name"
      android:layout_marginLeft="16.3dp"
      android:layout_marginStart="16.3dp"
      android:layout_toEndOf="@id/payment_method_logo"
      android:layout_toRightOf="@id/payment_method_logo"
      tools:text="Papa.formigas@ant-lover.com"
      style="@style/Aptoide.TextView.Regular.S.Grey"
      />

  <ImageView
      android:id="@+id/payment_method_selection"
      android:layout_width="22.6dp"
      android:layout_height="18.4dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignTop="@+id/payment_method_logo"
      android:layout_marginEnd="27dp"
      android:layout_marginRight="27dp"
      android:layout_marginTop="7dp"
      android:src="@drawable/ic_check_orange_24dp"
      android:visibility="gone"
      tools:visibility="visible"
      />


</RelativeLayout>