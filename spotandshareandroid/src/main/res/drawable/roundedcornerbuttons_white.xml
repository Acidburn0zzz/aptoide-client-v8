<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF"/>
      <!--<solid android:color="#DEB887"/>-->
      <stroke android:color="#e17117" android:width="2dp"/>
      <!--mete arredondados os conrers-->
      <corners android:radius="15dp"/>
    </shape>
  </item>

  <item android:drawable="@color/light_grey" android:state_enabled="true" android:state_pressed="true"/>
  <item android:drawable="@color/light_grey" android:state_enabled="true" android:state_focused="true"/>
  <item android:drawable="@color/light_grey" android:state_enabled="true" android:state_selected="true"/>
</selector>